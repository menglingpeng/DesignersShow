<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
    </style>

    <!--<style name="OverflowButtonStyle">
        &lt;!&ndash;替换溢出菜单图标 &ndash;&gt;
        <item name="android:src">@mipmap/ic_toolbar_overflow</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingStart">20dp</item>
    </style>-->

    <style name="OverflowMunuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!--弹出层背景颜色-->
        <!--<item name="android:popupBackground">@color/colorPrimary</item>-->
        <item name="android:dropDownVerticalOffset">20dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">true</item>
        <!--弹出层背景颜色-->
        <item name="android:popupBackground">@color/colorPrimary</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>

    <style name="TabLayoutTheme">
        <item name="android:textSize">16dp</item>
    </style>
    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
