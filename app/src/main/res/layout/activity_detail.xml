<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.menglingpeng.designersshow.mvp.view.DetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/detail_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_appbar_layout_height"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/detail_im"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recycler_view_item_shots_im__layout_height"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="@dimen/detail_im_layout_collapse_parallax_multiplier"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/detail_tb"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_collapseMode="pin">
            </android.support.v7.widget.Toolbar>

            <include layout="@layout/progress_bar"></include>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/detail_title_rl"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="#EEEEEE">

            <TextView
                android:id="@+id/detail_title_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Title"/>

            <TextView
                android:id="@+id/detail_header_update_time_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_title_tx"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/detail_avatar_im"
                android:layout_width="@dimen/recycler_view_item_avatar_layout_width"
                android:layout_height="@dimen/recycler_view_item_avatar_layout_height"
                android:layout_below="@+id/detail_header_update_time_tx"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/detail_user_name_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/detail_avatar_im"
                android:layout_below="@+id/detail_header_update_time_tx"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="@style/TextAppearance.AppCompat.Title"/>

            <TextView
                android:id="@+id/detail_header_user_location_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_user_name_tx"
                android:layout_toRightOf="@+id/detail_avatar_im"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/detail_desc_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/detail_title_rl"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <FrameLayout
                android:id="@+id/detail_likes_fl"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/detail_likes_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:src="@drawable/ic_favorite_grey_600"/>

                <TextView
                    android:id="@+id/detail_likes_count_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/detail_comments_fl"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/detail_comments_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:src="@drawable/ic_mode_comment_grey_600"/>

                <TextView
                    android:id="@+id/detail_comments_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/detail_buckets_fl"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/detail_buckets_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:src="@drawable/ic_buckets_grey_600_24dp"/>

                <TextView
                    android:id="@+id/detail_buckets_count_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/detail_views_fl"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/detail_views_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:src="@drawable/ic_view"/>

                <TextView
                    android:id="@+id/detail_views_count_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"/>

            </FrameLayout>

        </LinearLayout>

        <Button
            android:id="@+id/detail_attachment_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_desc_ll"
            android:paddingLeft="5dp"
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:drawableStart="@drawable/ic_attachment_24dp"
            android:background="@color/colorAccent"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/detail_desc_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_attachment_bt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:linksClickable="true" />
    </RelativeLayout>

    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
