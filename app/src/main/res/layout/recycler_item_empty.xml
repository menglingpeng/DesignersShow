<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recycler_item_empty_im"
        android:layout_width="@dimen/recycler_item_empty_im_layout_width"
        android:layout_height="@dimen/recycler_item_empty_im_layout_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/recycler_item_empty_im_layout_marginTop"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/recycler_item_empty_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_item_empty_im"
        android:layout_marginTop="@dimen/recycler_item_empty_tx_layout_marginTop"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

</RelativeLayout>