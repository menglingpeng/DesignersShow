<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_open_source_licenses_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/about_open_source_licenses_cv_layout_margin_left_right"
    android:layout_marginRight="@dimen/about_open_source_licenses_cv_layout_margin_left_right"
    android:layout_marginBottom="@dimen/about_open_source_licenses_cv_layout_marginBottom"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/recycler_view_item_padding"
    card_view:cardCornerRadius="@dimen/recycler_view_item_card_view_card_corner_radius">

    <TextView
        android:id="@+id/about_open_source_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_open_source_name_tv_layout_marginTop"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/about_open_source_name_tv_textSize"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    <TextView
        android:id="@+id/about_open_source_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_open_source_author_tv_layout_marginTop"
        android:textSize="@dimen/about_open_source_author_tv_textSize"
        android:textAppearance="@style/Base.DialogWindowTitle.AppCompat"/>

    <TextView
        android:id="@+id/about_open_source_licenses_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_open_source_licenses_name_tv_layout_margin_top_bottom"
        android:layout_marginBottom="@dimen/about_open_source_licenses_name_tv_layout_margin_top_bottom"/>

</android.support.v7.widget.CardView>