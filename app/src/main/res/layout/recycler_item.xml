<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/recycler_view_item_layout_marginTop"
    android:layout_marginLeft="@dimen/recycler_view_item_layout_marginTop"
    android:layout_marginRight="@dimen/recycler_view_item_layout_marginTop"
    android:paddingTop="@dimen/recycler_view_item_padding"
    android:clickable="true"
    card_view:cardCornerRadius="@dimen/recycler_view_item_card_view_card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/desc_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_view_item_desc_layout_layout_height"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/avatar_im"
                android:layout_width="@dimen/recycler_view_item_avatar_layout_width"
                android:layout_height="@dimen/recycler_view_item_avatar_layout_height"
                android:layout_marginStart="@dimen/recycler_view_item_avatar_layout_marginLeft"
                android:src="@drawable/ic_avatar"
                />

            <TextView
                android:id="@+id/shots_title_tx"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/avatar_im"
                android:layout_marginStart="@dimen/recycler_view_item_avatar_layout_marginLeft"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/shots_user_name_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shots_title_tx"
                android:layout_toRightOf="@+id/avatar_im"
                android:layout_marginStart="@dimen/recycler_view_item_avatar_layout_marginLeft"
                android:textColor="@color/shots_username"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"/>

            <TextView
                android:id="@+id/comma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shots_title_tx"
                android:layout_toRightOf="@+id/shots_user_name_tx"
                android:text=","/>

            <TextView
                android:id="@+id/shots_create_time_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shots_title_tx"
                android:layout_toRightOf="@+id/comma"
                android:layout_marginLeft="@dimen/recycler_view_item_shots_create_time_tx_layout_marginLeft"
                />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/shots_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_layout">

            <ImageView
                android:id="@+id/shots_im"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recycler_view_item_shots_im__layout_height"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/shots_gif_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_gif"
                android:visibility="gone" />
        </FrameLayout>


        <RelativeLayout
            android:id="@+id/comments_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_view_item_comments_layout_layout_height"
            android:layout_below="@+id/shots_fl"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/item_likes_count_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_imageview_layout_marginLeft"
                android:src="@drawable/ic_favorite_grey_600"/>

            <TextView
                android:id="@+id/item_likes_count_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_textview_layout_marginLeft"
                android:layout_toRightOf="@+id/item_likes_count_im"/>

            <ImageView
                android:id="@+id/item_comments_count_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_imageview_layout_marginLeft"
                android:layout_toRightOf="@+id/item_likes_count_tx"
                android:src="@drawable/ic_mode_comment_grey_600"/>

            <TextView
                android:id="@+id/item_comments_count_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_textview_layout_marginLeft"
                android:layout_toRightOf="@+id/item_comments_count_im"/>

            <ImageView
                android:id="@+id/item_views_count_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_imageview_layout_marginLeft"
                android:layout_toRightOf="@+id/item_comments_count_tx"
                android:src="@drawable/ic_view"/>

            <TextView
                android:id="@+id/item_view_count_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_view_item_comments_layout_layout_textview_layout_marginLeft"
                android:layout_toRightOf="@+id/item_views_count_im"/>

        </RelativeLayout>

    </RelativeLayout>

r</android.support.v7.widget.CardView>